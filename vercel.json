{
  "version": 2,
  "buildCommand": "prisma generate && npm run build",
  "devCommand": "npm run dev", 
  "installCommand": "npm install && prisma generate",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_ENV_VALIDATION": "true"
    }
  }
}
